@page
@model Liviu_Padurariu_Proiect.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.ID" />
            <div class="form-group">
                <label asp-for="Car.CarMakerID" class="control-label"></label>
                <select asp-for="Car.CarMakerID" class="form-control" asp-items="ViewBag.CarMakerID"></select>
                <span asp-validation-for="Car.CarMakerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.ColorID" class="control-label"></label>
                <select asp-for="Car.ColorID" class="form-control" asp-items="ViewBag.ColorID"></select>
                <span asp-validation-for="Car.ColorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.TransmissionID" class="control-label"></label>
                <select asp-for="Car.TransmissionID" class="form-control" asp-items="ViewBag.TransmissionID"></select>
                <span asp-validation-for="Car.TransmissionID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Seats" class="control-label"></label>
                <input asp-for="Car.Seats" class="form-control" />
                <span asp-validation-for="Car.Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Price" class="control-label"></label>
                <input asp-for="Car.Price" class="form-control" />
                <span asp-validation-for="Car.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.HP" class="control-label"></label>
                <input asp-for="Car.HP" class="form-control" />
                <span asp-validation-for="Car.HP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
